{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "functions": [],
  "variables": {
    "identityName": "{{identityName}}",
    "identityResourceGroup": "{{identityResourceGroup}}",
    "aciName": "{{aciName}}"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-03-01",
      "name": "[variables('aciName')]",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[format('/subscriptions/{0}/resourceGroups/{1}/providers/Microsoft.ManagedIdentity/userAssignedIdentities/{2}', subscription().subscriptionId, variables('identityResourceGroup'), variables('identityName'))]": {}
        }
      },
      "properties": {
        "containers": [
          {{Container_Placeholder}}
        ],
        "osType": "Linux",
        "restartPolicy": "Never"
      }
    }
  ]
}
